{
    "name": "reedware/is-attribute",
    "version": "1.0",
    "description": "Adds truth test helper for checking if class is an attribute.",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.6"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Reedware\\IsAttribute\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
